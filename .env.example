# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# Host address where the server will listen
# Default: localhost (only accessible from local machine)
# Use 0.0.0.0 to allow external connections
SERVER_HOST=localhost

# Port number for the server
# Default: 3100
SERVER_PORT=3100

# Server timeout configurations
# Format: duration string (e.g., 30s, 1m, 1h)
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# ==============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================================================
# Note: Database integration is not yet implemented
# These settings are prepared for future use

# Database host address
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database credentials
DB_USER=blog_user
DB_PASSWORD=blog_password

# Database name
DB_NAME=blog_db

# SSL mode: disable, require, verify-ca, verify-full
DB_SSLMODE=disable

# Connection pool settings
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================
# Note: Currently only in-memory cache is implemented
# Redis support is planned for future releases

# Cache type: memory or redis
CACHE_TYPE=memory

# Redis configuration (if CACHE_TYPE=redis)
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=
CACHE_DB=0

# Time-to-live for cached items
# Format: duration string (e.g., 1h, 30m, 24h)
CACHE_TTL=1h

# ==============================================================================
# BLOG CONFIGURATION
# ==============================================================================

# Blog title (appears in header and meta tags)
BLOG_TITLE=Igor's Blog

# Blog description (used in meta tags and RSS feed)
BLOG_DESCRIPTION=A personal blog about programming, technology, and life

# Default author name
BLOG_AUTHOR=Igor

# Blog URL (used for RSS feed and sitemap generation)
# Important: Update this for production deployment
BLOG_URL=http://localhost:3100

# Number of posts to display per page
BLOG_POSTS_PER_PAGE=10

# Theme name (for future theme system)
BLOG_THEME=default

# ==============================================================================
# ADMIN PANEL CONFIGURATION
# ==============================================================================

# Admin username for dashboard access
# IMPORTANT: Change this in production!
ADMIN_USERNAME=admin

# Admin password for dashboard access
# IMPORTANT: Use a strong password in production!
ADMIN_PASSWORD=admin123

# Secret key for session token generation
# IMPORTANT: Generate a random string for production!
# You can use: openssl rand -base64 32
ADMIN_SECRET=change-this-secret-key-in-production

# Session duration (how long until admin needs to login again)
# Format: duration string (e.g., 24h, 7d, 168h)
ADMIN_SESSION_DURATION=24h

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json or text
LOG_FORMAT=text

# Log file path (leave empty to log to stdout only)
LOG_FILE=server.log

# ==============================================================================
# FEATURE FLAGS (Future Use)
# ==============================================================================

# Enable/disable features
ENABLE_COMMENTS=false
ENABLE_ANALYTICS=true
ENABLE_NEWSLETTER=false

# ==============================================================================
# SECURITY CONFIGURATION (Future Use)
# ==============================================================================

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS settings
CORS_ENABLED=false
CORS_ALLOWED_ORIGINS=*

# ==============================================================================
# EXTERNAL SERVICES (Future Use)
# ==============================================================================

# Email service (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=

# Analytics
GOOGLE_ANALYTICS_ID=
PLAUSIBLE_DOMAIN=

# Social media
TWITTER_HANDLE=
GITHUB_USERNAME=
LINKEDIN_URL=
